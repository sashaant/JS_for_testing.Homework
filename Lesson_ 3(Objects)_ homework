//3. Write the function to sum all salaries and return it. Should be 1000 in the example above.
let salaries = {
    Mykola: 250,
    Pavlo: 250,
    Petro: 500
  }

// Variant_1 
  console.log(salaries.Mykola + salaries.Pavlo + salaries.Petro

// Variant_2
let sum = 0;
for (let key in salaries) {
  sum += salaries[key];
}

console.log(sum);

